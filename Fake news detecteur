  <h1>üì∞ D√©tecteur de Fake News</h1>

  <textarea id="news" placeholder="Collez ici le texte √† analyser..."></textarea>
  <br>
  <button onclick="analyser()">Analyser</button>

  <p id="resultat"></p>

  <script>
    function analyser() {
      let texte = document.getElementById("news").value.toLowerCase();
      let score = 0;

      let motsSuspects = ["incroyable", "choc", "secret", "urgent", "complot", "100%"];

      motsSuspects.forEach(mot => {
        if (texte.includes(mot)) score++;
      });

      if (texte.includes("!!!")) score++;
      if (texte.length < 50) score++;

      let resultat = document.getElementById("resultat");

      if (score >= 3) {
        resultat.innerHTML = "‚ö†Ô∏è Information probablement FAUSSE";
        resultat.style.color = "red";
      } else {
        resultat.innerHTML = "‚úÖ Information probablement FIABLE";
        resultat.style.color = "green";
      }
    }
  </script>

